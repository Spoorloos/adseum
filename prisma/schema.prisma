generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
    id        String   @id @default(uuid())
    email     String   @unique
    password  String
    sessions  Session[]
    createdAt DateTime @default(now())
}

model Session {
    id        String   @id @default(uuid())
    token     String   @unique
    user      User     @relation(fields: [userId], references: [id])
    userId    String
    userAgent String?
    createdAt DateTime @default(now())
}
